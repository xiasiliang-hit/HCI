    private void jComboBox1ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jComboBox1ActionPerformed
        // TODO add your handling code here:
        
	Global.msgs.add(jComboBox1.getSelectedItem().toString());
        Global.owners.add(Global.client);
        
        String s = jComboBox1.getSelectedItem().toString();
        if (s != locations[0])
        {
        
        st1.updateTextPane1(jComboBox1.getSelectedItem().toString(), Global.client);
        st3.updateTextPane3(jComboBox1.getSelectedItem().toString(), Global.client);
        }
//st.updateTextPane(jTextPane1, Global.client);
        //st.updateTextPane(Global.jf3.getJTextPane1(), Global.server);
        
        //this.jTextPane1.repaint();
        //Global.jf3.repaint();
        
    }//GEN-LAST:event_jComboBox1ActionPerformed

    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton1ActionPerformed
        // TODO add your handling code here:
        
        
        
        Global.msgs.add(jTextField1.getText());
        Global.owners.add(Global.client);

        //st.updateTextPane(jTextPane1, Global.client);
        //st.updateTextPane(Global.jf3.getJTextPane1(), Global.server);

        st1.updateTextPane1(jTextField1.getText(), Global.client);
        st3.updateTextPane3(jTextField1.getText(), Global.client);

        this.iMGbutton2.setVisible(false);
        this.jTextField1.setText("");
        
        this.jTextPane1.repaint();
    }//GEN-LAST:event_jButton1ActionPerformed

    private void iMGbutton1ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_iMGbutton1ActionPerformed
        // TODO add your handling code here:
        String s = "wait for response...";
        try
        {
            s = tls.translate("wait for response...", "en", Global.clientLang);
        }
        catch(Exception e)
        {
            e.printStackTrace();
        }
        
        Global.msgs.add(s);
        Global.owners.add(Global.client);
       
        //st.updateTextPane(jTextPane1, Global.client);
        st1.updateTextPane1(s, Global.client);
        
        Global.jf3.getIMGbutton2().setVisible(true);
        this.iMGbutton2.setVisible(false);
    }//GEN-LAST:event_iMGbutton1ActionPerformed

    private void iMGbuttonLocation1ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_iMGbuttonLocation1ActionPerformed
        // TODO add your handling code here:
        st1.updateTextPane1("[simulated GPS location]", Global.client);
        st3.updateTextPane3("[simulated GPS location]", Global.client);
        
        this.getIMGbutton2().setVisible(false);
                

    }//GEN-LAST:event_iMGbuttonLocation1ActionPerformed

